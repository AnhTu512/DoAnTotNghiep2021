@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "MonNgon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section container{
    <div class="products-breadcrumb">
        <div class="container">
            <ul>
                <li><i class="fa fa-home" aria-hidden="true"></i><a href="/">Home</a><span>|</span></li>
                <li>Sản phẩm từ nông sản</li>
            </ul>
        </div>
    </div>
}
@section slide
{
    <div class="banner">
        <div class="w3l_banner_nav_left">
            <nav class="navbar nav_bottom">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header nav_2">
                    <button type="button" class="navbar-toggle collapsed navbar-toggle1" data-toggle="collapse" data-target="#bs-megadropdown-tabs">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                @{Html.RenderAction("MainMenu", "Home"); }
                <!-- /.navbar-collapse -->
            </nav>
        </div>
        <div class="w3l_banner_nav_right">
            <div class="w3l_banner_nav_right_banner5">
                <h3>Siêu giảm giá cho sản phẩm mới<span class="blink_me"></span></h3>
            </div>
            <div class="w3l_banner_nav_right_banner3_btm">
                <div class="col-md-4 w3l_banner_nav_right_banner3_btml">
                    <div class="view view-tenth">
                        <img src="/Content/client/images/18.jpg" alt=" " class="img-responsive" />
                        <div class="mask">
                            <h4>Cửa hàng nông sản</h4>
                        </div>
                    </div>
                    <h4>Trái cây</h4>
                    <ol>
                        <li>Thực phẩm sạch</li>
                        <li>Chất lượng tốt</li>
                        <li>Giá ưu đãi</li>
                    </ol>
                </div>
                <div class="col-md-4 w3l_banner_nav_right_banner3_btml">
                    <div class="view view-tenth">
                        <img src="/Content/client/images/19.jpg" alt=" " class="img-responsive" />
                        <div class="mask">
                            <h4>Cửa hàng nông sản</h4>
                        </div>
                    </div>
                    <h4>Sản phẩm từ nông sản</h4>
                    <ol>
                        <li>Thực phẩm sạch</li>
                        <li>Chất lượng tốt</li>
                        <li>Giá ưu đãi</li>
                    </ol>
                </div>
                <div class="col-md-4 w3l_banner_nav_right_banner3_btml">
                    <div class="view view-tenth">
                        <img src="/Content/client/images/20.jpg" alt=" " class="img-responsive" />
                        <div class="mask">
                            <h4>Cửa hàng nông sản</h4>
                        </div>
                    </div>
                    <h4>Rau sạch</h4>
                    <ol>
                        <li>Sản phẩm tốt</li>
                        <li>Chất lượng cao</li>
                        <li>Giá thành rẻ</li>
                    </ol>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="w3ls_w3l_banner_nav_right_grid w3ls_w3l_banner_nav_right_grid_veg">
                <h3 class="w3l_fruit">Sản phẩm từ nông sản</h3>
                <div class="w3ls_w3l_banner_nav_right_grid1 w3ls_w3l_banner_nav_right_grid1_veg">
                    @foreach (var item in Model)
                    {
                        var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                        <div class="col-md-3 w3ls_w3l_banner_left">
                            <div class="hover14 column">
                                <div class="agile_top_brand_left_grid w3l_agile_top_brand_left_grid">
                                    <div class="agile_top_brand_left_grid_pos">
                                        <img src="/Content/client/images/offer.png" alt=" " class="img-responsive" />
                                    </div>
                                    <div class="agile_top_brand_left_grid1">
                                        <figure>
                                            <div class="snipcart-item block">
                                                <div class="snipcart-thumb">
                                                    <a href="@link"><img src="@item.HinhAnh" alt=" " class="img-responsive" /></a>
                                                    <p>@item.Name</p>
                                                    @if (item.GiaKhuyenMai > 0)
                                                    {
                                                <h4>@item.GiaKhuyenMai đ<span>@item.Gia</span> /@item.DVTinh</h4>

                                                    }
                                                    else
                                                    { <h4>@item.Gia đ /@item.DVTinh</h4>}
                                                </div>
                                                <div class="snipcart-details">
                                                    <form action="/them-gio-hang?productId=@item.ID&soluong=1" method="post">
                                                        <fieldset>
                                                            <input type="submit" name="submit" value="Thêm vào giỏ hàng" class="button" />
                                                        </fieldset>
                                                    </form>
                                                </div>
                                            </div>
                                        </figure>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- Phân trang-->
                    <div class="clearfix"> </div>
                    @Html.PagedListPager(Model, page => Url.Action("MonNgon", new { page }))
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
}

